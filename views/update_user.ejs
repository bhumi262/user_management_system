<!--Main Site-->

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
            <div class="filter">
                <a href="/" ></a><i class="fas fa-angle-double-left"></i>All User</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to update a  account</span>

        </div>


  <!--add user form-->
  <!--Form handling-->

<form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <lable for="name" class="text-dark">Name</lable>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value ="" placeholder="bhumi singh">
        </div>
        <div class="form-group">
            <lable for="email" class="text-dark">Email</lable>
            <input type="text" name="email" value ="" placeholder="example@gmail.com">
        </div>

        <div class="form-group">
            <lable for="Gender" class="text-dark">Gender</lable>
            <div class="radioinline">
           <input type="radio"name="gender" value="male">
           <lable for="gender" class="text-light">Male</lable>
            </div>

            <div class="radioinline">
                <input type="radio"name="gender" value="Female">
                <lable for="gender" class="text-light">Female</lable>
                 </div>
            
        </div>

        <div class="form-group">
            <lable for="Gender" class="text-dark">Status</lable>
            <div class="radioinline">
           <input type="radio"name="Status" value="Active">
           <lable for="gender" class="text-light">Active</lable>
            </div>

            <div class="radioinline">
                <input type="radio"name="Status" value="Inactive">
                <lable for="gender" class="text-light">Inactive</lable>
                 </div>
            
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn text-dark update">Save</button>
    </div>

</form>
<!--/Form handling-->



</div>
